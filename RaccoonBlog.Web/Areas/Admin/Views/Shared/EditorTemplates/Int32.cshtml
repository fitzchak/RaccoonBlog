<div class="form-group">
    <label class="col-sm-5 col-md-4 col-lg-3 control-label">
        @ViewData.ModelMetadata.DisplayName
    </label>
    <div class="col-sm-7 col-md-8 col-lg-9">
        @Html.TextBox(string.Empty, ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control", type = "number" })
        @Html.ValidationMessage(string.Empty)
    </div>
</div>